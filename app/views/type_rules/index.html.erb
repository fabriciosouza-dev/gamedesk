<%= render 'components/panel/panel_header_new',
           options: { title: 'Tipo de Regras',
                      link: new_type_rule_path,
                      link_options: { label: "Novo" } } %>

<div class="card-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered dataTable" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Chave</th>
        <th>Status</th>
        <th>AÃ§oes</th>
      </tr>
      </thead>
      <tbody style="font-weight: bold">
      <% @type_rules.each do |reward| %>
        <tr>
          <td><%= reward.name %></td>
          <td><%= reward.chave %></td>
          <td><%= reward.status.to_i == 1 ? "Ativo" : "Inativo" %></td>

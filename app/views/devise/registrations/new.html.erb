<div class="card card-primary">
  <div class="card-header"><h4>Register</h4></div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :name %><br/>
        <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "nome" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
      </div>

      <div class="row">
        <div class="form-group col-6">
          <%= f.label :password, class: 'd-block' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, id: 'password', class: 'form-control pwstrength', data: { indicator: "pwindicator" }, autocomplete: "new-password" %>
          <div id="pwindicator" class="pwindicator">
            <div class="bar"></div>
            <div class="label"></div>
          </div>
        </div>
        <div class="form-group col-6">
          <%= f.label :password_confirmation, class: 'd-block' %><br/>
          <%= f.password_field :password_confirmation, id: "password2", class: 'form-control', autocomplete: "new-password" %>
        </div>
      </div>


      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>

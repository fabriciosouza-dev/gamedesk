<%= render 'components/panel/panel_header_new',
           options: { title: 'Usuários',
                      link: new_user_path,
                      link_options: { label: "Novo" } } %>

<div class="card-body">
  <div class="table-responsive">
    <table class="table table-bordered dataTable" width="100%" cellspacing="0">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Telefone</th>
        <th>E-mail</th>
        <th>Admin</th>
        <th>Status</th>
        <th>Ações</th>
      </tr>
      </thead>
      <tbody style="font-weight: bold">
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? ? "Sim" : "Não" %></td>
          <td><%= user.status.to_i == 1 ? "Ativo" : "Inativo" %></td>
          <td align="center">
            <%= link_to_editar(edit_user_path(user)) %>
            <%= link_to_excluir(user_path(user)) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>